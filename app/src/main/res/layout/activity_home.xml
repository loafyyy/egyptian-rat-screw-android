<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/game_background"
    android:padding="32dp"
    tools:context="com.example.android.egyptianratscrew.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/play_iv"
            android:layout_width="@dimen/home_image_size"
            android:layout_height="@dimen/home_image_size" />

        <ImageView
            android:id="@+id/slap_iv"
            android:layout_width="@dimen/home_image_size"
            android:layout_height="@dimen/home_image_size" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="!"
            android:textSize="50sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/title_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Egyptian"
        android:textSize="@dimen/font_size_title" />

    <TextView
        android:id="@+id/title_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_tv_1"
        android:text="Rat"
        android:textSize="@dimen/font_size_title" />

    <TextView
        android:id="@+id/title_tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_tv_2"
        android:text="Screw"
        android:textSize="@dimen/font_size_title" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_tv_3"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:onClick="newGame"
            android:text="@string/new_game" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:onClick="continueGame"
            android:text="@string/continue_game" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:onClick="about"
            android:text="@string/about_game" />

    </LinearLayout>

</RelativeLayout>
